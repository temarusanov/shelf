    "@nx/jest": "18.0.5",
    "@nx/js": "18.0.5",
    "@nx/nest": "18.0.5",
    "@nx/node": "18.0.5",
    "@nx/plugin": "18.0.5",
    "@nx/webpack": "18.0.5",
    "@nx/workspace": "18.0.5",
