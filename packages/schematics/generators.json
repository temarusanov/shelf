{
  "name": "shelfjs/schematics",
  "version": "0.1",
  "extends": ["@nx/workspace"],
  "schematics": {
    "nest-cqrs": {
      "factory": "./src/generators/nest-cqrs/generator",
      "schema": "./src/generators/nest-cqrs/schema.json",
      "aliases": ["cqrs"],
      "x-type": "library",
      "description": "Create CQRS files"
    },
    "nest-module": {
      "factory": "./src/generators/nest-module/generator",
      "schema": "./src/generators/nest-module/schema.json",
      "aliases": ["module"],
      "x-type": "library",
      "description": "Create NestJS Module"
    }
  },
  "generators": {
    "nest-cqrs": {
      "factory": "./src/generators/nest-cqrs/generator",
      "schema": "./src/generators/nest-cqrs/schema.json",
      "description": "Create CQRS files"
    },
    "nest-module": {
      "factory": "./src/generators/nest-module/generator",
      "schema": "./src/generators/nest-module/schema.json",
      "description": "Create NestJS Module"
    }
  }
}
