{
  "name": "graphql-zod",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/graphql-zod/src",
  "projectType": "library",
  "targets": {
    "build": {
      "clean": true,
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/graphql-zod",
        "main": "packages/graphql-zod/src/index.ts",
        "tsConfig": "packages/graphql-zod/tsconfig.lib.json",
        "assets": ["packages/graphql-zod/*.md"]
      }
    },
    "publish": {
      "dependsOn": ["build"],
      "command": "node tools/scripts/publish.mjs graphql-zod {args.ver} {args.tag}"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/graphql-zod/jest.config.ts"
      }
    }
  },
  "tags": []
}
